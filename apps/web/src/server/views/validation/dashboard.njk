{% extends "layouts/layout-page.njk" %}
{% from "_includes/components/InfoBox/InfoBox.njk" import InfoBox %}
{% from "govuk/components/table/macro.njk" import govukTable %}

<% set tableHeadItems = [
			{ text: "Appeal reference" },
			{ text: "Received on" },
			{ text: "Appeal site" }
			]
%>

	{% block content %}

		<h1 class="govuk-heading-xl">
			Appeal submissions for review
		</h1>

		<h2 class="govuk-heading-l govuk-!-margin-bottom-1">
			New appeals
		</h2>

		{% if appealsList.newAppeals.length > 0 %}
			{{ govukTable({
						head: tableHeadItems,
						rows: appealsList.newAppeals
				})
			}}
		{% else %}
			{{ InfoBox('No New Appeals') }}
		{% endif %}

		<h2 class="govuk-heading-l govuk-!-margin-bottom-1">
			Incomplete appeals
		</h2>

		{% if appealsList.incompleteAppeals.length > 0 %}
			{{ govukTable({
				head: tableHeadItems,
				rows: appealsList.incompleteAppeals })
		}}
		{% else %}
			{{ infoBox('No Incomplete Appeals') }}
		{% endif %}

	{% endblock %}
