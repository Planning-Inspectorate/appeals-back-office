{
	"name": "@pins/appeals.api",
	"version": "0.0.0",
	"private": true,
	"description": "PINS Back Office Appeals API",
	"engines": {
		"node": ">=22 < 23"
	},
	"prisma": {
		"schema": "src/database/schema.prisma",
		"seed": "node src/database/seed/seed-development.js"
	},
	"type": "module",
	"scripts": {
		"test": "npm run prisma-generate && cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest --logHeapUsage --ci",
		"test:updateSnapshot": "npm run prisma-generate && cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest --logHeapUsage --ci --updateSnapshot",
		"test:cov": "npm run prisma-generate && cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest --forceExit --logHeapUsage --ci --coverage",
		"test:watch": "npm run test -- --watch",
		"dev": "npm run prisma-generate && nodemon --experimental-json-modules -e js ./src/server.js",
		"start": "node ./src/server.js",
		"lint:js": "eslint .",
		"lint:js:fix": "eslint . --fix",
		"clean": "rimraf .turbo node_modules dist",
		"gen-api-spec": "node ./src/server/gen-api-spec.js",
		"db:migrate": "npx prisma migrate dev",
		"db:migrate:prod": "npx prisma migrate deploy",
		"db:push": "npx prisma db push --accept-data-loss",
		"db:reset": "npx prisma migrate reset --force",
		"db:seed": "npm run prisma-generate && npx prisma db seed",
		"db:seed:no-purge": "npm run prisma-generate && node src/database/seed/seed-no-purge.js",
		"db:seed:training": "npm run prisma-generate && node src/database/seed/seed-training.js",
		"db:seed:prod": "npm run prisma-generate && node src/database/seed/seed-production.js",
		"db:seed:clear-test-data": "npm run prisma-generate && node src/database/seed/seed-clear-test-data.js",
		"prisma:format": "npx prisma format",
		"prisma-generate": "npx prisma generate && tsc --project src/database/tsconfig.json",
		"tscheck": "npx tsc -p jsconfig.json --maxNodeModuleJsDepth 0"
	},
	"dependencies": {
		"@azure/identity": "4.13.0",
		"@azure/service-bus": "^7.9.5",
		"@pins/event-client": "^0.0.0",
		"@pins/express": "^0.0.0",
		"@pins/platform": "^0.0.0",
		"@planning-inspectorate/data-model": "^2.9.0",
		"@prisma/adapter-mssql": "^7.1.0",
		"@prisma/client": "^7.1.0",
		"@supercharge/promise-pool": "^2.4.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^2.1.1",
		"applicationinsights": "^2.9.1",
		"body-parser": "1.20.3",
		"c8": "^7.11.3",
		"compression": "1.7.4",
		"cors": "2.8.5",
		"date-fns": "2.28.0",
		"date-fns-tz": "^2.0.0",
		"dotenv": "16.0.3",
		"express": "^5.2.0",
		"express-pino-logger": "^7.0.0",
		"express-validator": "^7.2.1",
		"got": "^12.5.2",
		"helmet": "8.1.0",
		"install": "^0.13.0",
		"joi": "^17.7.0",
		"lodash-es": "^4.17.21",
		"morgan": "1.10.0",
		"nock": "^13.5.1",
		"node-cache": "^5.1.2",
		"node-fetch": "^3.3.2",
		"notifications-node-client": "^8.2.1",
		"npm": "^11.6.0",
		"nunjucks": "^3.2.4",
		"pino": "^8.1.0",
		"pino-http": "^8.1.0",
		"pino-pretty": "^13.1.3",
		"rhea": "3.0.1",
		"swagger-ui-express": "^5.0.1",
		"xstate": "4.32.1"
	},
	"devDependencies": {
		"@types/express": "^5.0.5",
		"@types/express-pino-logger": "^4.0.6",
		"@types/jest": "^30.0.0",
		"@types/prettier": "^3.0.0",
		"@types/swagger-ui-express": "^4.1.8",
		"cross-env": "^10.1.0",
		"eslint": "8.18.0",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"jest-mock-extended": "^4.0.0",
		"mock-fs": "^5.5.0",
		"nodemon": "^2.0.18",
		"prisma": "7.2.0",
		"rimraf": "^6.0.1",
		"stream-chain": "^3.4.0",
		"stream-json": "^1.9.1",
		"supertest": "7.0.0",
		"swagger-autogen": "^2.21.4",
		"swagger-typescript-api": "^13.2.16"
	},
	"imports": {
		"#db-client/*": "./src/server/utils/db-client/*",
		"#utils/*": "./src/server/utils/*",
		"#repositories/*": "./src/server/repositories/*",
		"#infrastructure/*": "./src/server/infrastructure/*",
		"#middleware/*": "./src/server/middleware/*",
		"#endpoints/*": "./src/server/endpoints/*",
		"#tests/*": "./src/server/tests/*",
		"#common/*": "./src/server/common/*",
		"#config/*": "./src/server/config/*",
		"#state/*": "./src/server/state/*",
		"#mappers/*": "./src/server/mappers/*",
		"#notify/*": "./src/server/notify/*",
		"#server/*": "./src/server/*"
	}
}
