
{
	"name": "@pins/e2e",
	"version": "1.0.0",
	"description": "E2E Tests for the Back Office Application",
	"main": "index.js",
	"scripts": {
		"cy:open": "npx cypress open --browser chrome --e2e --config-file cypress.config.local.env.js",
		"cy:open:dev": "npx cypress open --browser chrome --e2e --config-file cypress.config.dev.env.js",
		"cy:open:test": "npx cypress open --browser chrome --e2e --config-file cypress.config.test.env.js",
		"cy:open:staging": "npx cypress open --browser chrome --e2e --config-file cypress.config.staging.env.js",
		"cy:open:test:data:generation": "npx cypress open --browser chrome --e2e --config-file cypress.test-generation.config.local.env.js",
		"cy:open:test:data:generation:dev": "npx cypress open --browser chrome --e2e --config-file cypress.test-generation.config.dev.env.js",
		"cy:open:test:data:generation:test": "npx cypress open --browser chrome --e2e --config-file cypress.test-generation.config.test.env.js",
		"cy:open:test:data:generation:staging": "npx cypress open --browser chrome --e2e --config-file cypress.test-generation.config.staging.env.js",
		"cy:run": "npx cypress run --config-file cypress.config.local.env.js", 
		"cy:run:dev": "npx cypress run --config-file cypress.config.dev.env.js",
		"cy:run:test": "npx cypress run --config-file cypress.config.test.env.js",
		"cy:run:staging": "npx cypress run --config-file cypress.config.staging.env.js",
		"cy:open-smoke": "npx cypress open --browser chrome --e2e --env grepTags='smoke'",
		"cy:run-smoke": "npx cypress run --env grepTags='smoke'",
		"cy:ci": "npx cypress run --env isCI=true",
		"cy:ci:local": "npx cypress run --env isCI=true --config-file cypress.config.local.env.js",
		"cy:ci:dev": "npx cypress run --env isCI=true --config-file cypress.config.dev.env.js",
		"cy:ci:test": "npx cypress run --env isCI=true --config-file cypress.config.test.env.js",
		"cy:ci:staging": "npx cypress run --env isCI=true --config-file cypress.config.staging.env.js"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"nodemon": "3.0.3"
	},
	"devDependencies": {
		"@badeball/cypress-cucumber-preprocessor": "^23.2.0",
		"@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
		"@cypress/grep": "^4.1.0",
		"@cypress/webpack-preprocessor": "^5.16.1",
		"@faker-js/faker": "^7.6.0",
		"cypress": "^15.3.0",
		"dotenv": "^16.0.3",
		"eslint-plugin-cypress": "^4.3.0",
		"fs-extra": "^11.2.0",
		"puppeteer": "^24.3.0"
	}
}
