{% extends "layouts/app.layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set title="Appellant case" %}

{% block main %}
	{% for section in sections -%}
		<div class="govuk-section-break">
			<h2 class="govuk-heading-l">{{ section.heading }}</h2>

			{{ govukSummaryList({
				rows: section.items | formatItems
			}) }}
		</div>
	{%- endfor %}
{% endblock %}
