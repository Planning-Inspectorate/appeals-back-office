{%- macro statusTag(status, classes = '') -%}
	{%- set statusTagColor = 'grey' -%}
	{%- set statusLabel = status -%}
	{#
		list of available color classes can be found
		at https://design-system.service.gov.uk/components/tag/#additional-colours
		or https://github.dev/alphagov/govuk-frontend/src/govuk/components/tag/_index.scss
	#}
	{%- switch (status | string | lower) -%}
		{%- case 'ready_to_start' -%}
			{%- set statusTagColor = 'turquoise' -%}
		{%- case 'lpa_questionnaire' -%}
			{%- set statusTagColor = 'yellow' -%}
		{%- case 'validation' -%}
			{%- set statusTagColor = 'orange' -%}
		{%- case 'statement_review' -%}
			{%- set statusTagColor = 'orange' -%}
		{%- case 'final_comment_review' -%}
			{%- set statusTagColor = 'purple' -%}
		{%- case 'event' -%}
			{%- set statusTagColor = 'blue' -%}
		{%- case 'issue_determination' -%}
			{%- set statusTagColor = 'pink' -%}
		{%- case 'complete' -%}
			{%- set statusTagColor = 'green' -%}
		{%- case 'overdue' -%}
			{%- set statusTagColor = 'red' -%}
		{%- case 'incomplete' -%}
			{%- set statusTagColor = 'yellow' -%}
		{%- case 'virus_scanning' -%}
			{%- set statusTagColor = 'yellow' -%}
		{%- case 'virus_detected' -%}
			{%- set statusTagColor = 'red' -%}
		{%- case 'late_entry' -%}
			{%- set statusTagColor = 'pink' -%}
		{%- case 'awaiting_transfer' -%}
			{%- set statusTagColor = 'red' -%}
	{%- endswitch -%}
	<strong class="govuk-tag govuk-tag--{{ statusTagColor }} single-line{{ ' ' + classes if classes }}">{{ statusLabel | appealStatusToStatusTag }}</strong>
{%- endmacro -%}
