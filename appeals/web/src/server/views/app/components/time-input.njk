{% macro govukTimeInput(params) %}
	<label class="govuk-label govuk-visually-hidden" for="{{ params.id }}-hour">Hour</label><input class="govuk-input govuk-input--width-2" id="{{ params.id }}-hour" name="{{ params.id }}-hour" type="number" value="{{ params.hour.value if params.hour and params.hour.value else '' }}">&nbsp;:&nbsp;<label class="govuk-label govuk-visually-hidden" for="{{ params.id }}-minute">Minute</label><input class="govuk-input govuk-input--width-2" id="{{ params.id }}-minute" name="{{ params.id }}-minute" type="number" value="{{ params.minute.value if params.minute and params.minute.value else '' }}">
{% endmacro %}
