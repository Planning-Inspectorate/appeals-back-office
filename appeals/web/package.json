{
  "name": "@pins/appeals.web",
  "version": "0.0.0",
  "private": true,
  "description": "PINS Back Office Appeals Web App",
  "engines": {
    "node": ">=22.0.0 <= 22.14.0"
  },
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all --silent sass rollup",
    "build:release": "cross-env NODE_ENV=production APP_RELEASE=true npm-run-all --silent sass rollup",
    "clean": "rimraf .turbo node_modules dist",
    "clean:dev": "rimraf dist src/server/static/scripts src/server/static/styles",
    "dev": "cross-env NODE_ENV=local npm-run-all --silent clean:dev sass rollup --parallel --race watch:** nodemon",
    "lint:js": "npx eslint .",
    "lint:js:fix": "npx eslint . --fix",
    "nodemon": "nodemon --config ./nodemon.json ./src/server/server.js",
    "rollup": "node ./scripts/rollup/bundle-js.js",
    "sass": "node ./scripts/rollup/compile-css.js",
    "start": "node ./src/server/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest --logHeapUsage --ci",
    "test:update": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest -u --logHeapUsage --ci",
    "test:watch": "npm run test -- --watch",
    "test:cov": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --expose-gc\" npx jest --logHeapUsage --ci --coverage --forceExit",
    "tscheck": "npx tsc -p jsconfig.json --maxNodeModuleJsDepth 0",
    "watch:rollup": "chokidar \"src/client/**/*.js\" --silent -c \"npm run rollup\"",
    "watch:sass": "chokidar \"src/styles/**/*.scss\" --silent -c \"npm run sass\""
  },
  "dependencies": {
    "@azure/msal-common": "6.3.0",
    "@azure/msal-node": "^2.9.2",
    "@azure/storage-blob": "^12.27.0",
    "@hapi/boom": "10.0.1",
    "@pins/blob-storage-client": "^0.0.0",
    "@pins/express": "^0.0.0",
    "@pins/platform": "^0.0.0",
    "@types/archiver": "^6.0.3",
    "accessible-autocomplete": "^3.0.1",
    "applicationinsights": "^2.9.1",
    "archiver": "^7.0.1",
    "body-parser": "1.20.3",
    "classnames": "^2.5.1",
    "compression": "1.7.4",
    "connect-redis": "^9.0.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "cypress": "15.3.0",
    "date-fns": "2.28.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "16.0.3",
    "express": "^5.1.0",
    "express-request-id": "2.0.1",
    "express-session": "1.18.1",
    "express-validator": "7.2.1",
    "form-data": "4.0.4",
    "got": "^12.5.2",
    "govuk-frontend": "5.9.0",
    "helmet": "8.1.0",
    "humps": "^2.0.1",
    "joi": "^17.7.0",
    "kleur": "4.1.5",
    "lodash-es": "^4.17.21",
    "morgan": "1.10.0",
    "node-cache": "^5.1.2",
    "node-schedule": "^2.1.0",
    "nunjucks": "^3.2.4",
    "pino": "7.11.0",
    "pino-http": "^7.0.0",
    "pino-pretty": "^7.6.1",
    "pluralize": "8.0.0",
    "redis": "^4.6.10",
    "regenerator-runtime": "^0.13.10",
    "response-time": "2.3.2",
    "serve-static": "1.16.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.26.9",
    "@faker-js/faker": "6.3.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-beep": "^1.0.3",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-virtual": "^3.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.12",
    "@types/date-fns": "^2.6.0",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^5.0.3",
    "@types/express-request-id": "^1.4.3",
    "@types/express-session": "^1.18.2",
    "@types/humps": "^2.0.1",
    "@types/jest": "^27.5.0",
    "@types/morgan": "^1.9.9",
    "@types/node-schedule": "^2.1.0",
    "@types/nunjucks": "^3.2.1",
    "@types/pluralize": "^0.0.33",
    "@types/regenerator-runtime": "^0.13.1",
    "@types/response-time": "^2.3.5",
    "@types/signale": "^1.4.4",
    "@types/supertest": "^2.0.12",
    "autoprefixer": "^10.4.7",
    "chokidar-cli": "^3.0.0",
    "core-js": "^3.45.1",
    "cross-env": "^7.0.3",
    "figures": "^4.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "nock": "^13.2.4",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.0",
    "rollup-plugin-iife": "^0.7.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.51.0",
    "signale": "1.4.0",
    "supertest": "^7.0.0",
    "terser": "^5.43.1"
  },
  "imports": {
    "#environment/*": "./environment/*",
    "#app/*": "./src/server/app/*",
    "#appeals/*": "./src/server/appeals/*",
    "#lib/*": "./src/server/lib/*",
    "#testing/*": "./testing/*",
    "#common/*": "./src/common/*"
  }
}
