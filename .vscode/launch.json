	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Web APP: Dev",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev", "--inspect-brk"],
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}/appeals/web",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "API APP: Dev",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev", "--inspect-brk"],
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}/appeals/api",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Appeals Back-Office",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev", "--inspect-brk"],
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "API APP: attach",
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}/appeals/api",
			"internalConsoleOptions": "neverOpen",
			"port": 9229,
			"address": "127.0.0.1",
			"localRoot": "${workspaceFolder}/appeals/api",
			"remoteRoot": "/src/app/appeals/api"
		},
	]
}
