{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "lodash": "^4.17.21",
    "turbo": "latest"
  }
}
